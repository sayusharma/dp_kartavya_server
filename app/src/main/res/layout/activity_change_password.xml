<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/bgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/visittoolbar"
        app:cardElevation="5dp"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:onClick="onClickBackChangePassword"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/open_sans_bold"
                android:text="Reset Password"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_below="@id/visittoolbar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:textSize="12dp"
            android:text="Old Password"
            android:textColor="#1f2144"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"></TextView>

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:textColorHint="#bdbdbd"
            android:layout_marginEnd="34dp"
            android:inputType="text"
            android:backgroundTint="#bdbdbd"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Enter Old Password"
            android:textColor="#1f2144"
            android:maxLines="1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViasew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:textSize="12dp"
            android:text="New Password"
            android:textColor="#1f2144"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"></TextView>

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:textColorHint="#bdbdbd"
            android:layout_marginEnd="34dp"
            android:inputType="text"
            android:backgroundTint="#bdbdbd"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Enter New Password"
            android:textColor="#1f2144"
            android:maxLines="1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/text32View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:textSize="12dp"
            android:text="Confirm New Password"
            android:textColor="#1f2144"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"></TextView>

        <EditText
            android:id="@+id/conNewPassword"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:textColorHint="#bdbdbd"
            android:layout_marginEnd="34dp"
            android:inputType="text"
            android:backgroundTint="#bdbdbd"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Confirm New Password"
            android:textColor="#1f2144"
            android:maxLines="1"
            android:textSize="16sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_marginTop="24dp"
            android:textAllCaps="false"
            android:layout_marginStart="33dp"
            android:onClick="onClickResetPassword"
            android:layout_marginEnd="32dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"/>

    </LinearLayout>
</RelativeLayout>