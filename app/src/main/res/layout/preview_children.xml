<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/itemId"
        android:layout_marginLeft="30dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="#"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:id="@+id/pchildPos"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="AYush Sharma"
            android:id="@+id/pchildName"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="8077919303"
            android:id="@+id/pchildMob"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Outside Delhi"
        android:layout_below="@id/itemId"
        android:id="@+id/pchildAddr"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="12sp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below="@id/pchildAddr"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"/>
</RelativeLayout>